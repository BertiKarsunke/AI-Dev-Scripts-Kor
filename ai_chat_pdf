#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Parse command-line arguments
while [[ $# -gt 0 ]]; do
    key="$1"

    case $key in
        -f|--filename)
        filename="$2"
        shift # past argument
        shift # past value
        ;;
        -q|--question)
        question="$2"
        shift # past argument
        shift # past value
        ;;
        *)    # unknown option
        echo "Unknown option: $1"
        exit 1
        ;;
    esac
done

# Call the Python script with the provided arguments
python3 "$SCRIPT_DIR/src/pdf_chat.py" -f "$filename" -q "$question"